# Azure Environment Configuration for Escoffier

# Application
APP_NAME=escoffier
ENVIRONMENT=production
PORT=8080

# Azure PostgreSQL
DATABASE_HOST=${AZURE_POSTGRES_HOST}
DATABASE_PORT=5432
DATABASE_NAME=escoffier
DATABASE_USER=escoffieradmin
DATABASE_SSL_MODE=require

# Azure Redis Cache
REDIS_HOST=${AZURE_REDIS_HOST}
REDIS_PORT=6380
REDIS_SSL=true

# Azure AI Foundry / OpenAI
AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT}
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=${APPLICATIONINSIGHTS_CONNECTION_STRING}

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_TRACING=true

# Security
USE_AZURE_KEY_VAULT=true
AZURE_KEY_VAULT_NAME=${AZURE_KEY_VAULT_NAME}

# Performance
MAX_CONCURRENT_ORDERS=100
MAX_AGENTS_PER_TYPE=10
AGENT_TIMEOUT_SECONDS=300

# Kitchen Configuration
KITCHEN_SIMULATION_SPEED=1.0
ENABLE_REAL_TIME_VISUALIZATION=true