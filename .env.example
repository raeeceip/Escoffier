# escoffierEnvironment Configuration
# Copy this file to .env and fill in your actual values

# LLM API Keys (at least one is required for agent functionality)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Database Configuration
DATABASE_URL=postgresql://masterchef:masterchef@localhost:5432/masterchef?sslmode=disable
POSTGRES_USER=masterchef
POSTGRES_PASSWORD=masterchef
POSTGRES_DB=masterchef

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Server Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger Configuration
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Environment (development, production)
ENVIRONMENT=development

# Log Level (debug, info, warn, error)
LOG_LEVEL=info